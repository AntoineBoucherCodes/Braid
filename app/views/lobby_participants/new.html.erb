<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Invite a friend to <%= @lobby.name %>!</h1>

      <%= simple_form_for [ @lobby, @lobby_participant ] do |f| %>
        <%= f.input :user_id, collection: User.all, label_method: :email, prompt: 'Select a user' %>
        <%= f.button :submit, "Invite!", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
