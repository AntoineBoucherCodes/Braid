<div class="container">
  <% lobby_store = @lobby.user.carts.last.order_items.first.product.store %>

  <h3 class="text-center"><%= @lobby.name %></h3>

  <div class="row">
    <div class="col-7">
      <p>Participants:</p>
      <div><%= render 'lobbies/your_cart' %></div>
      <br>
      <div><%= render 'lobbies/lobby_participant_carts' %></div>
      <br>

  <%# To do: turn the contents of this div into a partial once the proper logic is implemented to clean up this page %>
      <div>
        <br>
        <h1>This Lobby's Total: <%= number_to_currency(@lobby.total_price) %></h1>
        <p>
          <%= lobby_store.name %>'s discount breakpoint: <%= number_to_currency(lobby_store.discount_breakpoints) %>
        </p>

        <br>
        <% if @lobby.total_price >= lobby_store.discount_breakpoints %>
          <p>Congratulations! This lobby's total cart amount qualifies for a 15% discount!</p>
          <h1>Your new Lobby's Total: <%= number_to_currency(@lobby.total_price - (@lobby.total_price * 0.15)) %></h1>
        <% else %>
          <p>
            Your order does not qualify for a discount.
            <br>
            Spend an additional <%= number_to_currency(lobby_store.discount_breakpoints - @lobby.total_price) %> to unlock a 15% discount!
          </p>
        <% end %>
      </div>

      <div><br><%= render 'lobbies/confirm_order' %></div>
    </div>
    <div class="col-5">
      <div class="store-info-container">
        <div class="product-store-info">
          <h1 class='mb-0'><%= lobby_store.name %></h1>
          <p class='mb-0'style="color:#51A996;"><%= lobby_store.address %></p>
          <p class='mb-0'><%= lobby_store.description %></p>
          <p>Promotions</p>
          <a class="btn btn-breakpoint-price" href="#"><%= lobby_store.discount_breakpoints %>$</a>
          <a class="btn btn-breakpoint-one" href="#">15% off</a>
          <br>
          <a class="btn btn-breakpoint-price" href="#">3000$</a>
          <a class="btn btn-breakpoint-two" href="#">20% off</a>
          <br>
          <a class="btn btn-breakpoint-price" href="#">10,000$</a>
          <a class="btn btn-breakpoint-three" href="#">30% off</a>
          <br>
          <a class="btn btn-breakpoint-price" href="#">50,000$</a>
          <a class="btn btn-breakpoint-four" href="#">50% off</a>
        </div>
      </div>
    </div>
  </div>


  </div>
</div>


<br>
<%= link_to 'Invite a friend to the Lobby!', new_lobby_lobby_participant_path(@lobby), class: 'btn btn-flat' %>
<%= link_to "Close lobby", lobby_path(@lobby), method: :delete, data: { confirm: "Are you sure you want to delete #{@lobby.name}?" } %>
