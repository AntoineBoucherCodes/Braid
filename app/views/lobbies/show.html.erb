<div class="container">
  <h1>Welcome to <%= @lobby.name %> !</h1>
  <h5>Owner: <%= @lobby.user.email %></h5>
  <br>
  <h2><%# @store.name %></h2>

  <h3><%# @store.description %></h3>

  <div class="">
    <h1>Your Cart</h1>
    <div> 
      <%= @lobby.user.carts.last.order_items.each do |order_item| %>
        <p>
          <%= order_item.quantity %>x 
          <%= order_item.product.name %>
          <br>
          Total: <%= number_to_currency(order_item.total_price) %>
        </p>
      <% end %>
    </div>
  </div>
  <br>

  
  <div>
    <h1>Lobby Participant's Carts</h1>
  </div>
  <%= link_to 'Invite a friend to the Lobby!', new_lobby_lobby_participant_path(@lobby), class: 'btn btn-primary' %>
</div>

