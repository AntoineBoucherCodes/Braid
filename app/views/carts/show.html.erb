<div class="container">
  <article>
    <h2>Your Cart</h2>

    <table>
      <% @cart.order_items.each do |order_item| %>
        <tr>
          <td class="quantity"><%= order_item.quantity %></td>
          <td><%= order_item.product.name %></td>
          <td class="price"><%= number_to_currency(order_item.total_price) %></td>
        </tr>
      <% end %>

      <tfoot>
        <tr>
          <th colspan="2">Total:</th>
          <td class="price"><%= number_to_currency(@cart.total_price) %></td>
        </tr>
      </tfoot>
    </table>
    <br>
    <%= button_to 'Empty cart', @cart,
    method: :delete,
    data: { confirm: 'Are you sure?' } %>
  </article>
</div>